{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "outFile": "wwwroot/scripts/appBundle.js",
    "outDir": "wwwroot"
  },
  "exclude": [
    "bower_components",
    "node_modules",
    "wwwroot"
  ]
}
